#!/usr/bin/env zsh

print_usage() {
  echo "usage: dots [command] [options]"
}

local -a usage
zparseopts -D -- -help=usage h=usage

[[ -n $usage ]] && { print_usage >&2; exit 1 }

DOTS_MOUNT=${$(cd ${0%/*} && echo $PWD)%/*}
export DOTS_MOUNT

export dots="$DOTS_MOUNT/lib/dots/lib/dots.zsh"

executable="$DOTS_MOUNT/libexec/dots/$@[1]"

shift
$executable.* "$@"
